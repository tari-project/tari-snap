{
  "extends": "../../tsconfig.json",
  "include": ["src"],
  "compilerOptions": {
    "allowJs": false,
    "preserveConstEnums": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ESNext"
  }
}
